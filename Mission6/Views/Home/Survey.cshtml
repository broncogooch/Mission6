@{
    ViewData["Title"] = "New Movie";
}
@model Movie

<div class="text-center">
    <h1 class="display-4">Enter a New Movie</h1>
    <form method="post">
        <label asp-for="Category" required>Category:</label>
        <input asp-for="Category"/>
        <br /><br />
        <label asp-for="Title" required>Title:</label>
        <input asp-for="Title" />
        <br /><br />
        <label asp-for="Year" required>Year:</label>
        <input asp-for="Year" />
        <br /><br />
        <label asp-for="Director" required>Director:</label>
        <input asp-for="Director" />
        <br /><br />
        <label asp-for="Rating" required>Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br /><br />
        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br /><br />
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" />
        <br /><br />
        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" maxlength="25" />
        <br /><br />
        <button type="submit">Add Movie</button>
    </form>
</div>